<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Lobby Status Text -->
    <TextView
        android:id="@+id/lobbyStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Successfully created a lobby!"
        android:textSize="18sp"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/arcade"/>

    <!-- Playing As (Username) -->
    <TextView
        android:id="@+id/playingAsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Playing as [username]"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/arcade"/>

    <!-- Game Type -->
    <TextView
        android:id="@+id/gameTypeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Playing [gametype]"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/arcade"/>

    <!-- Loading Icon -->
    <ProgressBar
        android:id="@+id/loadingIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_marginTop="20dp"/>

    <!-- Lobby Join Text -->
    <TextView
        android:id="@+id/lobbyJoinText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please wait for someone to join"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/gray"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/arcade"/>

    <!-- Display Lobby ID -->
    <TextView
        android:id="@+id/lobbyIdText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your lobby ID is: "
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/arcade"/>

    <!-- Simulate Join Button -->
    <Button
        android:id="@+id/joinLobbyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simulate User Joining"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:fontFamily="@font/arcade"/>

    <!-- Spacer to push Cancel Button to the bottom -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Cancel Button at the bottom -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel Lobby"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/arcade"/>

</LinearLayout>
