<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <!-- Game Status -->
    <TextView
        android:id="@+id/gameStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waiting for players..."
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/arcade"/>

    <!-- Checkers Board (8x8 Grid) -->
    <GridLayout
        android:id="@+id/gameBoard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="8"
        android:columnCount="8"
        android:layout_gravity="center"
        android:background="@color/black">

        <!-- The buttons for the board will be created dynamically in the activity -->
    </GridLayout>

    <!-- Restart Game Button -->
    <Button
        android:id="@+id/restartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restart Game"
        android:layout_marginTop="20dp"
        android:visibility="gone"/>

    <!-- Switch User Button (For Testing) -->
    <Button
        android:id="@+id/switchUserButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch User"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/arcade"/>
</LinearLayout>
